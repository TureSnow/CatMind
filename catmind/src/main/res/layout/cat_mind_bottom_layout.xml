<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/cat_mind_bottom_window_backgroud"
    android:padding="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/cat_mind_divider_row"
        android:showDividers="middle"
        android:gravity="center">
        <TextView
            android:id="@+id/activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="activity" />

        <TextView
            android:id="@+id/fragment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="fragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="@drawable/cat_mind_divider_column"
            android:showDividers="middle">
            <TextView
                android:id="@+id/show_cross"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#007AFF"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:text="get more"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/cat_mind_bottom_dismiss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#FF0000"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:text="dismiss"
                android:textAlignment="center"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>